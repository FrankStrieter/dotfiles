#!/usr/bin/env sh

set -e

term="${1?Need folder to play}"

album="$(find -L ~/Music -type d | fzf --reverse --tiebreak=index --select-1 --exact --query "$term")"

printf 'Playing %b%s%b\n' '\e[1;32m' "$album" '\e[0m'

osascript <<EOS
  tell application "VLC"
    OpenURL "file://$album"
    play
  end tell
EOS
