[alias]
	qn = !ruby \"$(cygpath --windows --absolute ~/bin/git/git-quick.rb)\" new $*
	qa = !ruby \"$(cygpath --windows --absolute ~/bin/git/git-quick.rb)\" add $*
	qap= !ruby \"$(cygpath --windows --absolute ~/bin/git/git-quick.rb)\" add_patch $*
	qr = !ruby \"$(cygpath --windows --absolute ~/bin/git/git-quick.rb)\" rm $*
	qh = !ruby \"$(cygpath --windows --absolute ~/bin/git/git-quick.rb)\" head $*
	qc = !ruby \"$(cygpath --windows --absolute ~/bin/git/git-quick.rb)\" checkout $*
	qd = !ruby \"$(cygpath --windows --absolute ~/bin/git/git-quick.rb)\" diff $*
	qdc = !ruby \"$(cygpath --windows --absolute ~/bin/git/git-quick.rb)\" diff_cached $*
	glog = log --graph --pretty=oneline --abbrev-commit --decorate --branches
	wtf = !ruby \"$(cygpath --windows --absolute ~/bin/git/git-wtf.rb)\" --all --relations
	rank = !ruby \"$(cygpath --windows --absolute ~/bin/git/git-rank-contributors.rb)\" $*
	publish = !ruby \"$(cygpath --windows --absolute ~/bin/git/git-publish-branch.rb)\" $*
	svn-relocate = !sh ~/bin/git/git-svn-relocate.sh $*
	clobber = !sh ~/bin/git/git-cleanup.sh
	sh = !sh ~/bin/git/git-sh.sh
	multi-cherry-pick = !sh ~/bin/git/git-multi-cherry-pick.sh
	ui = !'/c/Tools/QGit/qgit.exe' --all &
	personal = !ruby \"$(cygpath --windows --absolute ~/bin/git/git-personal-build.rb)\" agross $*
	some = !ruby \"$(cygpath --windows --absolute ~/bin/git/some-commits.rb)\" $*
