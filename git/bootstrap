symlink "$topic/gitconfig"
symlink "$topic/gitconfig.training"
symlink "$topic/git-wtfrc"

if [[ "$OSTYPE" == 'mac' ]]; then
  formula git
  cask beyond-compare
  cask diffmerge
  cask kdiff3
  cask meld
  cask p4merge
  cask fork
  cask gitup

  symlink "$topic/platform-specific/credential/osx-keychain.config" "$HOME/.git-config/credential.config"
  symlink "$topic/platform-specific/macos/alias-ui.config"          "$HOME/.git-config/alias-ui.config"
else
  symlink "$topic/platform-specific/credential/cache.config" "$HOME/.git-config/credential.config"
fi

if [[ "$OSTYPE" == 'cygwin' || "$OSTYPE" == 'windows' ]]; then
  symlink "$topic/platform-specific/windows/alias-ui.config"              "$HOME/.git-config/alias-ui.config"
  symlink "$topic/platform-specific/windows/diff-highlight-colors.config" "$HOME/.git-config/windows/diff-highlight-colors.config"
  symlink "$topic/platform-specific/windows/ruby-aliases.config"          "$HOME/.git-config/windows/ruby-aliases.config"
fi

[[ "$OSTYPE" == 'windows' ]] || symlink "$topic/gitshrc"
