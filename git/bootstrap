symlink "$topic/gitconfig"
symlink "$topic/gitconfig.training"
symlink "$topic/git-wtfrc"

if [[ "$OSTYPE" == 'mac' ]]; then
  formula git
  cask beyond-compare
  cask diffmerge
  cask kdiff3
  cask meld
  cask p4merge

  symlink "$topic/platform-specific/credential/osx-keychain.config" "$HOME/.git-config/credential.config"
  symlink "$topic/platform-specific/macos-diff-highlight-colors.config" "$HOME/.git-config/diff-highlight-colors.config"
else
  symlink "$topic/platform-specific/credential/cache.config" "$HOME/.git-config/credential.config"
fi

[[ "$OSTYPE" == 'windows' ]] || symlink "$topic/gitshrc"
