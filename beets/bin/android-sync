#!/usr/bin/env bash

set -euo pipefail

script="${0##*/}"
script_path="${0%/*}"

local_music="$HOME/Music/Music/"
droid_music="/sdcard/Music"
droid_host=android

rsync --progress \
      --verbose \
      --human-readable \
      --archive \
      --partial \
      --delete \
      --delete-excluded \
      --exclude-from "$script_path/$script.exclude" \
      "$local_music" \
      "$droid_host:$droid_music"

scp "$script_path/android-sync.dir-dates" \
    "$droid_host":"$droid_music"

# shellcheck disable=2029
ssh "$droid_host" \
    bash "$droid_music/android-sync.dir-dates" "$droid_music"
