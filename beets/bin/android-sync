#!/usr/bin/env bash

set -euo pipefail

script="${0##*/}"
script_path="${0%/*}"

local_music="$HOME/Music/Music/"
droid_music="/storage/3B3E-E2EC/Android/media/com.arachnoid.sshelper/Music"
droid_host=android

# Set directory dates, rsync will sync those dates as well as file dates.
dir-date-from-files "$local_music"

rsync --progress \
      --verbose \
      --human-readable \
      --modify-window=1 \
      --archive \
      --partial \
      --delete \
      --delete-excluded \
      --exclude-from "$script_path/../$script/exclude" \
      "$local_music" \
      "$droid_host:$droid_music"
