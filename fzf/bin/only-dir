#!/usr/bin/env ruby

require 'set'

base = ARGV.first || '.'
dirs = Set.new
$stdin.each_line do |line|
  dir = File.dirname(line)
  anc = []

  while dirs.add?(dir)
    anc << dir
    break if dir == base
    dir = File.dirname(dir)
  end

  begin
    puts anc.reverse unless anc.empty?
  rescue Errno::EPIPE
    exit 141
  end
end
